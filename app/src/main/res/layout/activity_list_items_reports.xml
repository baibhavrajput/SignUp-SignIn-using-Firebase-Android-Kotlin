<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_items_background"
        android:orientation="horizontal"
        android:weightSum="100"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvNutrientListItem"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:paddingLeft="8dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:text="Nutrient"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvTotalListItem"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="16.33"
            android:paddingLeft="8dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:text="Total"
            android:textAlignment="center"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvGoalListItem"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="16.33"
            android:paddingLeft="8dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:text="Goal"
            android:textAlignment="center"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvPlusMinusListItem"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="16.33"
            android:paddingLeft="8dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:text="[+/-]"
            android:textAlignment="center"
            android:textSize="16sp" />
    </LinearLayout>

</FrameLayout>